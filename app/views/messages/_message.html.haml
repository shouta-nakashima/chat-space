.message-list__chat-box{data: {message: {id: message.id}}}
  .message-list__chat-box__user-box
    %p.message-list__chat-box__user-box__user-name
      = message.user.name
    %p.message-list__chat-box__user-box__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  %p.message-list__chat-box__chat-message
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?

